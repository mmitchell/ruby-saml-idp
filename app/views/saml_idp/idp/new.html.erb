<% if @saml_idp_fail_msg %>
  <div id="saml_idp_fail_msg" class="flash error"><%= @saml_idp_fail_msg %></div>
<% end %>

<%= form_tag 'auth', id: 'slick-login' do %>
  <p> INTEGRATION TEST FORM </p>
  <%= hidden_field_tag("SAMLRequest", params[:SAMLRequest]) %>

  <p>
    <%= label_tag :enterprise_id %>
    <%= text_field_tag :enterprise_id, params[:enterprise_id], autocapitalize: "off", autocorrect: "off", :spellcheck => "false", size: 30, class: "email_pwd txt", placeholder: "Enterprise ID" %>
  </p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], autocapitalize: "off", autocorrect: "off", :spellcheck => "false", size: 30, class: "email_pwd txt", placeholder: "Email" %>
  </p>

  <p>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, params[:first_name], autocapitalize: "off", autocorrect: "off", :spellcheck => "false", size: 30, class: "email_pwd txt", placeholder: "First Name" %>
  </p>

  <p>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, params[:last_name], autocapitalize: "off", autocorrect: "off", :spellcheck => "false", size: 30, class: "email_pwd txt", placeholder: "Last Name" %>
  </p>

  <p style='margin-top: 10px;'>
    <p style="float:right; margin-right: 80px; margin-top: 2px; font-size: 14px; color: #777;"> Employee? </p>
    <%= check_box_tag :is_employee?, params[:is_intel?], placeholder: "Employee?" %>
  </p>

  <p>
    <%= submit_tag "Sign in", :class => "button big blueish" %>
  </p>
<% end %>

